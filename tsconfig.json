{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": "./src",
    "paths": {
      "admin": [ "app/admin" ],
      "buyer": [ "app/buyer" ],
      "components": [ "app/shared-components" ],
      "services": [ "app/services" ],
      "mocks": [ "app/mocks" ],
      "interfaces": [ "app/interfaces" ],
      "pipes": ["app/pipes"], 
      "styles": ["styles"],
      "images": ["images"]
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
